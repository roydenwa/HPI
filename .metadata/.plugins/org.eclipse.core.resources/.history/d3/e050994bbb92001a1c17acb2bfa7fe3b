#include <string.h>
#include <omnetpp.h>
#include <iostream>
#include <string>
#include <cstdio>


using namespace omnetpp;


class Simple2: public cSimpleModule
{
private:
  int counter;
  int message_counter;

protected:
    virtual void send_message() override;
    virtual void initialize() override;
    virtual void handleMessage(cMessage *msg) override;
};

Define_Module(Simple2);

void Simple2::send_message(char out_string[])
{
    // helper func to choose outgate randomly
    cMessage *msg = new cMessage(out_string);

    if (rand() % 2 == 0) {
        send(msg, "out1");
    } else {
        send(msg, "out2");
    }
}

void Simple2::initialize()
{
    counter = 0;
    message_counter = 0;

    // to see counter during simulation
    WATCH(counter);

    // start with node "tic"
    if (strcmp("tic", getName()) == 0) {
        char out_string[128];
        auto message_name = "tictocMsg";
        snprintf(out_string, 128, "%s%d", message_name, message_counter);

        send_message(out_string);
        /*
        cMessage *msg = new cMessage(out_string);
        send(msg, "out1");*/

    }
}

void Simple2::handleMessage(cMessage *msg)
{
    // method is called when a msg arrives
    counter++;

    if (par("send_only_5").boolValue() == true) {
        if (counter < 5) {
            send(msg, "out1");
        } else {
            message_counter++;
            delete msg;

            cMessage *msg = new cMessage("tictocMsg");
            send(msg, "out1");
        }
    } else {
        send(msg, "out1");
    }
}
